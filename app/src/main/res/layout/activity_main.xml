<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:padding="16dp">

<ImageView
android:id="@+id/decorative_graphic"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentTop="true"
android:layout_centerHorizontal="true"
android:layout_marginTop="10dp"/>

<TextView
android:id="@+id/title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Enter Your Number"
android:textSize="18sp"
android:textColor="@color/title_color"
android:layout_below="@id/decorative_graphic"
android:layout_centerHorizontal="true"
android:layout_marginTop="10dp"/>

    <!-- Icon Next to Input Field -->
<ImageView
android:id="@+id/icon_input"
android:layout_width="24dp"
android:layout_height="24dp"
android:src="@drawable/icon_cm"
android:layout_below="@id/title"
android:layout_marginTop="20dp"
android:layout_alignParentStart="true"
android:layout_marginEnd="8dp" />

<EditText
android:id="@+id/inputCm"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:autofillHints=""
    android:hint="Enter your number in cm"
android:inputType="numberDecimal"
android:layout_toEndOf="@id/icon_input"
android:layout_below="@id/title"
android:layout_marginTop="20dp"/>

<Button
android:id="@+id/convertButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Click To Calculate"
android:backgroundTint="@color/button_color"
android:textColor="@color/button_text_color"
android:layout_below="@id/inputCm"
android:layout_marginTop="20dp"
android:layout_centerHorizontal="true"/>

    <!-- Decorative Graphic Above Result -->
<ImageView
android:id="@+id/decorative_graphic_bottom"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@id/convertButton"
android:layout_centerHorizontal="true"
android:layout_marginTop="10dp"/>

<TextView
android:id="@+id/result"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="0"
android:textSize="24sp"
android:textColor="@color/result_text_color"
android:layout_below="@id/decorative_graphic_bottom"
android:layout_marginTop="20dp"
android:layout_centerHorizontal="true" />

    </RelativeLayout>
